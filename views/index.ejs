            <h2>
              <a href="/book/<%=book.id%>">
                <%= book.title %>
              </a>
            </h2>
            <p class="rating">
              Rating: <%= book.rating %>/5
            </p>
            <p class="summary">
              <%= book.summary %>
            </p>
          </article>
        </li>
        <hr>
        <% }) %>
